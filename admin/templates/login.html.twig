<!DOCTYPE html>
<html lang="en">
<head>
    <title>{{ AppTitle }} {{ AdminModule }}</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="../css/estilo.css">
</head>
<body onload="document.getElementById('user').focus();">
    <div align="center">
        <h1>{{ Institute }}</h1>
        <h2>{{ WelcomeAdmin }}</h2>
    </div>
    <table width="100%" height="100%" border="0">
        <tr>
            <td class="bgwhite" align="center" valign="top">
                <table cellpadding="0" cellspacing="0" border="1" style="width:360px; height:250px; border: 3px solid #174a89;">
                    <tr>
                        <td class="bgwhite" valign="middle" style="padding: 40px;">
                            <form name="loginForm" method="post" action="login.php?action=login">
                                <table cellspacing="0" width="100%" border="0">
                                    <tr>
                                        <td class="bgwhite">{{ user }}</td>
                                        <td><input type="text" size="15" name="user" id="user"></td>
                                    </tr>
                                    <tr>
                                        <td class="bgwhite">{{ password }}</td>
                                        <td><input type="password" size="15" name="password"></td>
                                    </tr>
                                    <tr>
                                        <td class="bgwhite" align="center" colspan="2">
                                            <button type="submit" name="b_s">Aceptar</button>
                                        </td>
                                    </tr>
                                </table>
                            </form>
                        </td>
                    </tr>
                    <tr height="50">
                        <td class="bgwhite" valign="middle" align="center" colspan="2">
                            <font color="#ff0000">{{ message }}</font>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
